# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                controllers.HomePage.index
GET     /aboutus                         controllers.HomePage.aboutUs
GET     /contactus                         controllers.HomePage.contactUs
GET     /newrelese                         controllers.HomePage.newReleses
GET     /allfilms                        controllers.HomePage.allFilms

GET     /opentimes                        controllers.HomePage.openTimes


GET     /login                           controllers.HomePage.login

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)